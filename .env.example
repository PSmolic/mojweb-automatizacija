# =============================================================================
# Solution Press Automation - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Generate passwords with: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
N8N_HOST=automation.mojweb.site
N8N_USER=admin
N8N_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# MojWeb API
# -----------------------------------------------------------------------------
# Create API key at: https://mojweb.site/dashboard/settings/api
# Required scopes: business:*, website:*, media:write, inquiry:*
MOJWEB_API_URL=https://mojweb.site
MOJWEB_API_KEY=mw_live_xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# MojaFirma API (optional)
# -----------------------------------------------------------------------------
MOJAFIRMA_API_URL=https://mojafirma.hr
MOJAFIRMA_API_KEY=

# -----------------------------------------------------------------------------
# Notifications - Telegram
# -----------------------------------------------------------------------------
# Create bot: https://t.me/BotFather
# Get chat ID: https://t.me/userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# -----------------------------------------------------------------------------
# Email - Gmail (optional)
# -----------------------------------------------------------------------------
# Use OAuth2 credentials from Google Cloud Console
# Or use App Password: https://myaccount.google.com/apppasswords
GMAIL_USER=
GMAIL_APP_PASSWORD=

# -----------------------------------------------------------------------------
# AI - OpenAI (optional, for demo generation)
# -----------------------------------------------------------------------------
# Get API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# WAHA - WhatsApp HTTP API (Self-hosted)
# -----------------------------------------------------------------------------
# Dashboard: http://localhost:3000/dashboard
# No Meta API keys needed - just scan QR code with your phone
#
# ⚠️  WARNINGS:
# - Use a phone number that is NOT your main number
# - Start slow (5-10 messages/day) to avoid bans
# - WhatsApp can ban accounts using unofficial APIs
#
WAHA_USER=admin
WAHA_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# API key for WAHA (required - generate with: openssl rand -hex 32)
WAHA_API_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# -----------------------------------------------------------------------------
# External APIs (optional)
# -----------------------------------------------------------------------------
# Gold/Silver prices
METALS_API_KEY=

# Google Sheets (for backup/logging)
GOOGLE_SHEETS_CREDENTIALS_JSON=

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_RETENTION_DAYS=30
# Optional: S3-compatible storage for offsite backups
# BACKUP_S3_ENDPOINT=
# BACKUP_S3_BUCKET=
# BACKUP_S3_ACCESS_KEY=
# BACKUP_S3_SECRET_KEY=
